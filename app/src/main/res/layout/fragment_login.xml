<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_gravity="bottom|center"
        android:layout_marginVertical="270dp"/>

    <Button
        android:id="@+id/buttonToRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_gravity="bottom|center"
        android:layout_marginVertical="215dp"/>

    <EditText
        android:id="@+id/editTextLoginPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_gravity="bottom|center"
        android:layout_marginVertical="333dp"/>

    <EditText
        android:id="@+id/editTextLoginName"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_gravity="bottom|center"
        android:layout_marginVertical="380dp"
        android:ems="10"
        android:hint="User name"
        android:inputType="textPersonName" />

</FrameLayout>